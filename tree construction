#include<bits/stdc++.h>
using namespace std;

class node
{
    public:
        int x;
        node*left,*right;
};


void constr(int arr[],int l,int r,node* parent)
{
   
        sort(arr+l, arr+r+1);
    int mid =(r+l)/2;
    parent->x=arr[mid];

    if(l<=mid-1)
    {
        parent->left=new node();
    constr(arr,l,mid-1,parent->left);
    }
     if(mid+1<=r)
    {
        parent->right=new node();
    constr(arr,mid+1,r,parent->right);

    }
}
void print(node*head)
{
    if(head==NULL)return;
    cout<<head->x<<"  ";
    print(head->left);

    print(head->right);

}


int main()
{
    int arr[]={9,1,3,4,5,6,7,8,0};

    node* head=new node();
        constr(arr,0,8,head);
print (head);
}
